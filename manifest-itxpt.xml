<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides"
           xsi:type="MailApp">

  <Id>f6efd93b-896e-4d55-a135-5294952dbc95</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ITXPT Labeling Team</ProviderName>
  <DefaultLocale>sv-SE</DefaultLocale>

  <DisplayName DefaultValue="ITXPT Labeling Templates"/>
  <Description DefaultValue="Insert structured templates for labeling tests, deadlines, and process stages into your emails."/>
  
  <IconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/help.html"/>

  <AppDomains>
    <AppDomain>https://hsitxpt.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/taskpane.html"/>
        <RequestedHeight>320</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <ov:VersionOverrides xsi:type="VersionOverridesV1_0">
    <ov:Requirements>
      <ov:Sets DefaultMinVersion="1.3">
        <ov:Set Name="Mailbox"/>
      </ov:Sets>
    </ov:Requirements>
    <ov:Hosts>
      <ov:Host xsi:type="MailHost">
        <ov:DesktopFormFactor>
          <ov:ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="grpCompose" label="ITXPT Templates">
                <ov:Control xsi:type="Button" id="btnComposeOpenPane">
                  <ov:Label resid="Button.Label"/>
                  <ov:Supertip>
                    <ov:Title resid="SuperTip.Title"/>
                    <ov:Description resid="SuperTip.Description"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:Image size="16" resid="Icon16"/>
                    <ov:Image size="32" resid="Icon32"/>
                    <ov:Image size="80" resid="Icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ShowTaskpane">
                    <ov:SourceLocation resid="TaskPane.Url"/>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>
        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>
    <ov:Resources>
      <ov:Images>
        <ov:Image id="Icon16" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
        <ov:Image id="Icon32" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
        <ov:Image id="Icon80" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-128.png"/>
      </ov:Images>
      <ov:Urls>
        <ov:Url id="TaskPane.Url" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/taskpane.html"/>
      </ov:Urls>
      <ov:ShortStrings>
        <ov:String id="Button.Label" DefaultValue="ITXPT Templates"/>
        <ov:String id="SuperTip.Title" DefaultValue="ITXPT Labeling Templates"/>
        <ov:String id="Group.Label" DefaultValue="ITXPT Templates"/>
      </ov:ShortStrings>
      <ov:LongStrings>
        <ov:String id="SuperTip.Description" DefaultValue="Open the task pane to insert structured labeling templates into your email."/>
      </ov:LongStrings>
    </ov:Resources>
  </ov:VersionOverrides>
</OfficeApp>

