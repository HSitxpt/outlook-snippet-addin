<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <Id>f6efd93b-896e-4d55-a135-5294952dbc95</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ITXPT Labeling Team</ProviderName>
  <DefaultLocale>sv-SE</DefaultLocale>

  <DisplayName DefaultValue="ITXPT Labeling Templates"/>
  <Description DefaultValue="Insert structured templates for labeling tests, deadlines, and process stages into your emails."/>
  
  <IconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/help.html"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <AppDomains>
    <AppDomain>https://hsitxpt.github.io</AppDomain>
  </AppDomains>

  <Permissions>ReadWriteItem</Permissions>
</OfficeApp>

