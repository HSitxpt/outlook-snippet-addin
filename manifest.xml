<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides"
           xsi:type="MailApp">

  <Id>c1a3e6e3-62d2-4cb5-bbc2-6b712c200abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Henrik's Lab</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Insert Snippet"/>
  <Description DefaultValue="Insert structured email snippets like test results, compliance checks, etc."/>
  <!-- Use a real 64x64 PNG you place in the repo -->
  <IconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-128.png"/>
  <!-- Any public https help page in your repo -->
  <SupportUrl DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/help.html"/>

  <AppDomains>
    <AppDomain>https://hsitxpt.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <ov:VersionOverrides xsi:type="VersionOverridesV1_0">
    <ov:Requirements>
      <ov:Sets DefaultMinVersion="1.3">
        <ov:Set Name="Mailbox"/>
      </ov:Sets>
    </ov:Requirements>

    <ov:Hosts>
      <ov:Host xsi:type="MailHost">
        <ov:DesktopFormFactor>
          <ov:FunctionFile resid="Commands.Url"/>

          <ov:ExtensionPoint xsi:type="MessageReadCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="grpRead" label="Insert Snippet">
                <ov:Control xsi:type="Button" id="btnReadOpenPane">
                  <ov:Label resid="Button.Label"/>
                  <ov:Supertip>
                    <ov:Title resid="SuperTip.Title"/>
                    <ov:Description resid="SuperTip.Description"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:Image size="16" resid="Icon16"/>
                    <ov:Image size="32" resid="Icon32"/>
                    <ov:Image size="80" resid="Icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ShowTaskpane">
                    <ov:SourceLocation resid="TaskPane.Url"/>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>

          <ov:ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="grpCompose" label="Insert Snippet">
                <ov:Control xsi:type="Button" id="btnComposeOpenPane">
                  <ov:Label resid="Button.Label"/>
                  <ov:Supertip>
                    <ov:Title resid="SuperTip.Title"/>
                    <ov:Description resid="SuperTip.Description"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:Image size="16" resid="Icon16"/>
                    <ov:Image size="32" resid="Icon32"/>
                    <ov:Image size="80" resid="Icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ShowTaskpane">
                    <ov:SourceLocation resid="TaskPane.Url"/>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>
        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <ov:Resources>
      <ov:Images>
        <ov:Image id="Icon16" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
        <ov:Image id="Icon32" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-64.png"/>
        <ov:Image id="Icon80" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/assets/icon-128.png"/>
      </ov:Images>

      <ov:Urls>
        <ov:Url id="TaskPane.Url" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/index.html"/>
        <ov:Url id="Commands.Url" DefaultValue="https://hsitxpt.github.io/outlook-snippet-addin/commands.html"/>
      </ov:Urls>

      <ov:ShortStrings>
        <ov:String id="Button.Label" DefaultValue="Insert Snippet"/>
        <ov:String id="SuperTip.Title" DefaultValue="Insert Snippet"/>
        <ov:String id="Group.Label" DefaultValue="Insert Snippet"/>
      </ov:ShortStrings>

      <ov:LongStrings>
        <ov:String id="SuperTip.Description" DefaultValue="Open the task pane to insert a predefined snippet into your email."/>
      </ov:LongStrings>
    </ov:Resources>
  </ov:VersionOverrides>
</OfficeApp>
